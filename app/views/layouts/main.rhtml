<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
	<title><%=
		if @title then
			h @title
		else
			h controller.controller_name
		end
		-%> : <%=h @store_name %></title>
	<%= javascript_include_tag :defaults, :cache => 'default' %>
  <%= 
    javascript_include_tag(
      'substruct', 'subModal', 'lightbox', 
      :plugin => 'substruct', 
      :cache => 'substruct_cache'
    ) 
  %>
  <%= 
    stylesheet_link_tag(
      'main', 'subModal', 'lightbox',
      :plugin => 'substruct', 
      :cache => 'substruct_main'
    ) 
  %>
	<%= yield :header %>
</head>
<body>

<!-- Begin Container -->
<div id="container">
	<div id="header">

		<!-- logo -->
		<div style="float:left;">
			<a href="/"><%= image_tag('Repat-Stamp.png', :alt => 'Project Repat', :plugin => 'substruct') %></a>
		</div>

                <!--<div class="leftHeader">-->
                  <!-- top links -->
                  <ul class="navigation" id="toplinks">
                          <li ><a href="/store">buy a shirt</a></li>
                          <%
                                  @main_nav_tags.each_index do |i|
                                          tag = @main_nav_tags[i]
                          %>
                                  <li>
                                          <%= link_to(tag.name, :controller => 'store', :action => 'show_by_tags', :tags => [tag.name]) %>
                                  </li>
                          <% end %>
                          <li><a href="/store/show_cart" class="submodal-600-400">Cart</a></li>
                          <li><a href="/questions/ask">Contact Us</a></li>
                  </ul>
		<!--</div>-->
		
		<% if @customer && !@customer.new_record? %>
			<div id="customer_msg">
				<%= @customer.email_address %>
				<br/>
				<a href="/customers/logout">log out</a>
			</div>
		<% end %>
		
		
		<div class="clear"></div>

		
	</div>
	<!-- End header -->

	<!-- Begin content body  -->
	<div id="contentBody">
		
    <%= render :partial => '/shared/flash', :locals => { :flash => flash } %>
		
		<%= yield %>
	</div>
	<!-- End content body -->


	<div id="footer">
		<ul class="navigation">
			<li><a href="/">Home</a></li>
			<li><a href="/questions/faq">FAQ</a></li>
			<li><a href="/questions/ask">Contact Us</a></li>
			<li><a href="/blog">Blog</a></li>
			<li><a href="/customers/wishlist">Wishlist</a></li>
			<li><a href="/store/show_cart" class="submodal-600-400">Cart</a></li>
		</ul>
	</div>
	<div class="clear"></div>
	<br/>
	
</div>
<!-- End container -->

</body>
</html>
